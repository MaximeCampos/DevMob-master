<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_bvn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bvn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="20dp"
        android:textSize="25dp"
        android:textColor="@color/orange"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toTopOf="@+id/txt_bvn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <EditText
        android:id="@+id/edt_mdp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/mdp"
        android:inputType="textPassword"
        android:layout_marginRight="100dp"
        app:layout_constraintTop_toTopOf="@+id/txt_bvn"
        app:layout_constraintBaseline_toBaselineOf="@+id/edt_email"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <Button
        android:id="@+id/btn_co"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/co"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="connexion"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>